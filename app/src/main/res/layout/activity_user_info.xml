<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@mipmap/comm_left"
       >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人资料"
            android:drawablePadding="10dp"
            android:textColor="#373A42"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            android:text="保存"
            android:textColor="@color/mainColor"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="visible"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_below="@id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line"
       />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:id="@+id/img_head"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_head_default"/>

    <TextView
        android:text="修改头像"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="@color/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_nick_name"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:text="昵称"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/img_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wd_next"/>

        <EditText
            android:layout_toLeftOf="@id/img_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="10dp"
            android:id="@+id/tv_nick_name"
           android:singleLine="true"
            android:ellipsize="end"
            android:background="@null"
            android:gravity="right"
            android:imeOptions="actionDone"
            android:textSize="14sp"
            android:textColor="@color/text_content"
            android:text="未设置"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone">

        <TextView
            android:text="性别"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/img_sex"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wd_next"/>

        <TextView
            android:layout_toLeftOf="@id/img_sex"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:id="@+id/tv_sex"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="@color/text_content"
            android:text="未设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line"
        />


    <RelativeLayout
        android:id="@+id/rl_birthday"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:text="出生日期"
            android:layout_marginLeft="20dp"
            android:textColor="@color/text_black"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/img_date"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wd_next"/>

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_toLeftOf="@id/img_date"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:textSize="14sp"
            android:textColor="@color/text_content"
            android:text="未设置"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/line"
        />

</LinearLayout>