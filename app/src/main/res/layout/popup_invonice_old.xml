<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="440dp"
    android:background="@drawable/shape_pop_up"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="发票"
            android:textColor="#373A42"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="取消"
            android:textColor="@color/text_content"
            android:textSize="14sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="发票类型"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_invoice_select"
                android:gravity="center"
                android:text="电子发票"
                android:textColor="@color/mainColor"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="发票抬头"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/checkbox_personal"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:background="@drawable/check_invonice_style"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="个人"
                    android:textColor="@color/mainColor" />


                <RadioButton
                    android:id="@+id/checkbox_unit"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/check_invonice_style"
                    android:button="@null"
                    android:gravity="center"
                    android:text="单位"
                    android:textColor="@color/y_price" />
            </RadioGroup>

            <com.woyun.warehouse.view.DropEditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shape_mall_search"
                android:hint="名字"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:drawablePadding="10dp"
                android:textColor="#373A42"
                android:textSize="12sp" />

            <com.woyun.warehouse.view.ClearEditText
                android:id="@+id/edit_code"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_mall_search"
                android:hint="纳税人识别号"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="#373A42"
                android:textSize="12sp"
                android:visibility="gone" />

            <com.woyun.warehouse.view.ClearEditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_mall_search"
                android:hint="邮箱"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="#373A42"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="发票类型"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_invoice_select"
                android:gravity="center"
                android:text="商品"
                android:textColor="@color/mainColor"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_main_btn"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
