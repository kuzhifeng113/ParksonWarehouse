<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@mipmap/comm_left"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:text="确认订单"
            android:textColor="#373A42"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            android:text="保存"
            android:textColor="#EC4374"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/line"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="本商品为红包福利购买，不予退款退货处理。"
                    android:textSize="12sp"
                    android:background="#FFFFB2CA"
                    android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_no_address"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:text="  您还没有添加地址哟！"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@mipmap/ic_order_address"
                        android:drawablePadding="12dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/rl_have_address"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/check_one"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_black_t"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_black_t"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_detial_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/text_content"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_edit_img" />

                </RelativeLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F5F5F5"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F5F5F5"/>

                <!--仓币 余额 是否使用-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp">

                    <TextView
                        android:id="@+id/tv_keyong_bcoin"
                        android:layout_marginTop="10dp"
                        android:layout_centerVertical="true"
                        android:text="可用100红包"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <View
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/line"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F5F5F5"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">
                    <TextView
                        android:text="商品总额:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/smallTitle"
                        />
                    <TextView
                        android:id="@+id/tv_all_price"
                        android:text="￥00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/moneyText"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="0.8dp"
                    android:background="@color/line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">
                    <TextView
                        android:text="邮费:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/smallTitle"
                        />
                    <TextView
                        android:id="@+id/tv_transport"
                        android:text="￥00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/moneyText"/>
                </RelativeLayout>

                <View
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">
                    <TextView
                        android:text="仓币优惠:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/smallTitle"
                        />
                    <TextView
                        android:id="@+id/tv_bc_coin"
                        android:text="-￥0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/moneyText"/>
                </RelativeLayout>

                <View
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:background="@color/line"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp">
                    <TextView
                        android:text="余额:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/smallTitle"
                        />
                    <TextView
                        android:id="@+id/tv_bc_money"
                        android:text="-￥0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/moneyText"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line"/>

                <RelativeLayout
                    android:id="@+id/rl_share"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:visibility="gone">
                    <TextView
                        android:text="分享减免:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/smallTitle"
                        />
                    <TextView
                        android:id="@+id/tv_share_money"
                        android:text="-￥0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/moneyText"/>
                </RelativeLayout>


                <View
                    android:id="@+id/view_share"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line"
                    android:visibility="gone"/>

                <TextView
                    android:text="备注:"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/smallTitle"
                    />

                <EditText
                    android:id="@+id/edit_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(选填) 输入你想表达的~~~"
                    android:textSize="13sp"
                    android:layout_marginBottom="20dp"
                    style="@style/OrderEditText"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/line"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/line" />
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_check_all"
                android:text="合计："
                android:textColor="@color/text_black_t"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_heji_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_1"
                android:text="￥0"
                android:textColor="@color/mainColor"
                android:textSize="17sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_to_pay"
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_cart_jiesuan"
                android:gravity="center"
                android:text="付款"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>