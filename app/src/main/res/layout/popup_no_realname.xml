<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape_white_liner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_right_cha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img_de"
        android:src="@mipmap/ic_pop_noreal"
        android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_text1"
        android:text="实名认证"
        android:layout_below="@+id/img_de"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/text_black"/>

    <TextView
        android:text="认证通过后即可提现"
        android:layout_below="@+id/tv_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_content"/>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_agent_buy"
        android:layout_marginBottom="35dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:textSize="14sp"
       android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/shape_main_btn"
        android:text="去认证"/>


</RelativeLayout>
