<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/shape_white_liner"
            android:orientation="vertical">

            <TextView
                android:textSize="17sp"
                android:layout_marginTop="27dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_black"
                android:text="协助注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="39dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:hint="输入手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:background="@drawable/shape_pop_register"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/edit_phone_two"
                android:layout_width="match_parent"
                android:maxLength="11"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="39dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:hint="确认手机号码"
                android:inputType="number"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:background="@drawable/shape_pop_register"
                android:layout_height="40dp" />

            <TextView
                android:text="说明："
                android:layout_marginTop="38dp"
                android:layout_gravity="center"
                android:textColor="#FF437A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/agent_register_sm"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:textColor="#C6CBD2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_bind"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:text="确认"
                android:background="@drawable/shape_help_button_register"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_right_cha" />



</RelativeLayout>
