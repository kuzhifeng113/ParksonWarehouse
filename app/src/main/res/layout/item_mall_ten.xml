<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/item_click_style"
    android:orientation="vertical">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/round_img_goods"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default"
            app:riv_corner_radius="5dp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/round_img_goods"
        >

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="美国丨足不出户享受到美国明星"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_below="@id/tv_goods_name"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="中秋味道，眉心已到货-金沙流黄
                肉馅的极致体验【少量】"
            android:textColor="@color/text_content"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_sales_volume"
            android:layout_below="@id/tv_goods_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:text="销量：100万"
            android:textSize="10sp"
            android:textColor="@color/text_content"/>

        <TextView
            android:id="@+id/tv_supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_bottom"
            android:layout_marginBottom="7dp"
            android:textSize="10sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#8792A4"
            android:text="供应商"/>


        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_above="@id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#F5336F"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/tv_vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="560"
                android:textStyle="bold"
                android:textColor="#F5336F"
                android:textSize="19sp"
                 />

            <TextView
                android:id="@+id/tv_vip_back"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_vip_fan"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="会员反15"
                android:textColor="@color/white"
                android:textSize="9sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="原价:660"
            android:textColor="#FFBF44"
            android:textSize="12sp"
            />
    </RelativeLayout>



</RelativeLayout>
