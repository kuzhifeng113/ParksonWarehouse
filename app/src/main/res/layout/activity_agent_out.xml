<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@mipmap/comm_left"
       >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/agent_out"
            android:drawablePadding="10dp"
            android:textColor="#373A42"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            android:text="保存"
            android:textColor="#EC4374"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </android.support.v7.widget.Toolbar>

    <View

        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical">
        <!--可退-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_vip_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可退VIP（0个）"
                android:textSize="12sp"
                android:textColor="#999999"
                />

            <TextView
                android:id="@+id/tv_refund"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="14sp"
                android:textColor="@color/mainColor"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>


        <!--扣税-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扣税(0%)"
                android:textSize="12sp"
                android:textColor="#999999"
                />

            <TextView
                android:id="@+id/tv_fee_money"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="14sp"
                android:textColor="@color/mainColor"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>


        <!--实际退款-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际退款"
                android:textSize="12sp"
                android:textColor="#999999"
                />

            <TextView
                android:id="@+id/tv_actrefund"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0元"
                android:textSize="14sp"
                android:textColor="@color/mainColor"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
        />

    <EditText
        android:id="@+id/edit_text"
       android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="12sp"
        android:textColor="@color/text_content"
        android:hint="请填写您想退出代理的原因，提交成功后我们会第一时间审核"
        android:background="@null"
        android:gravity="left"/>

    <View
        android:layout_below="@id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5"
        />
    <Button
        android:id="@+id/btn_out_agent"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="立即提交"
        android:background="@drawable/shape_main_btn"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_marginTop="28dp"
        android:text="注："
        android:textColor="#FB3E59"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:text="1.  退出代理后不能再申请开通"
        android:textColor="#FB3E59"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:text="2. 退出成功代理款会退回您的付款账号"
        android:textColor="#FB3E59"
        android:layout_marginLeft="20dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>