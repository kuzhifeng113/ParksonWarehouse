<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_white_liner"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="请输入二级密码"
                android:textColor="@color/text_black"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_cancel"
                android:textColor="@color/text_content"
                android:textSize="14sp"
                android:text="取消"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
        >

         <!--验证码-->
         <com.jkb.vcedittext.VerificationCodeEditText
             android:id="@+id/edit_pwd"
             android:layout_gravity="center_vertical"
             android:layout_width="match_parent"
             android:layout_marginLeft="48dp"
             android:layout_marginRight="48dp"
             android:layout_height="wrap_content"
             android:inputType="number"
             android:text=""
             android:textColor="@color/text_black"
             android:textSize="30sp"
             app:bottomLineHeight="2dp"
             app:bottomLineNormalColor="@color/comm_line"
             app:bottomLineSelectedColor="@color/text_black"
             app:figures="4"
             app:selectedBackgroundColor="@color/white"
             app:verCodeMargin="3dp" />
         
     </LinearLayout>

    </LinearLayout>

</RelativeLayout>
