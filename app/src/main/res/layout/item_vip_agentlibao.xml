<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:orientation="vertical"
    android:background="@drawable/shape_agentlb_frame">

   <TextView
       android:text="代理礼包"
       android:textColor="#9E5706"
       android:textSize="14sp"
       android:layout_marginLeft="18dp"
       android:gravity="center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@mipmap/img_agent_gift"/>

   <com.makeramen.roundedimageview.RoundedImageView
       android:id="@+id/round_img"
       android:layout_width="104dp"
       android:layout_height="95dp"
       android:scaleType="centerCrop"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="18dp"
       android:layout_marginLeft="20dp"
       android:src="@mipmap/img_default"
       />




   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="35dp"
       android:layout_marginLeft="18dp"
       android:layout_toRightOf="@id/round_img"
       android:orientation="vertical">

      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="美国丨足不出户享受到美国明星"
          android:textColor="@color/text_black"
          android:layout_marginRight="10dp"
          android:textStyle="bold"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/tv_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:layout_marginTop="9dp"
          android:layout_marginRight="10dp"
          android:singleLine="true"
          android:text="上一列开向往年的列车"
          android:textColor="@color/text_content"
          android:textSize="12sp" />



      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="22dp"
          android:orientation="vertical">

         <TextView
             android:id="@+id/tv_vip_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="￥560"
             android:textColor="#D49730"
             android:textSize="18sp"
            />

         <TextView
             android:id="@+id/tv_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="2dp"
             android:text="市场价"
             android:textColor="#D2D2D2"
             android:textSize="12sp"
              />
      </LinearLayout>



   </LinearLayout>
   
   <Button
       android:id="@+id/bt_goumai"
       android:layout_width="72dp"
       android:layout_height="30dp"
       android:text="购买"
       android:textColor="@color/white"
       android:textSize="14sp"
       android:background="@drawable/shape_gradient_agent"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:gravity="center"
       android:layout_marginBottom="18dp"
       android:layout_marginRight="16dp"/>

</RelativeLayout>
