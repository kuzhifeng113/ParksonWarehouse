<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlAccentColor="@android:color/white"
        app:srlEnablePreviewInEditMode="false"
        app:srlPrimaryColor="#FFFD4F5F">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<android.support.v4.widget.NestedScrollView-->
        <com.woyun.warehouse.view.JudgeNestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--?attr/colorPrimary-->
                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    app:titleEnabled="false">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="305dp"
                        android:background="@mipmap/bg_welfare"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/lll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible"
                            >

                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/rl_ding"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:text="福利"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                            <RelativeLayout
                                android:id="@+id/rl_ding"
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="50dp"
                                android:paddingBottom="10dp"
                                android:visibility="invisible"
                                android:background="@drawable/shape_welfare_marque">

                                <com.sunfusheng.marqueeview.MarqueeView
                                    android:id="@+id/img_ding"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    app:mvAnimDuration="1000"
                                    app:mvDirection="right_to_left"
                                    app:mvInterval="3000"
                                    android:layout_marginLeft="5dp"
                                    app:mvGravity="center"
                                    app:mvTextColor="@color/white"
                                    app:mvTextSize="11sp"
                                    app:mvSingleLine="true"/>
                            </RelativeLayout>
                        </RelativeLayout>




                    </RelativeLayout>

                    <!--红包-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="95dp"
                      >

                        <RelativeLayout
                            android:id="@+id/rl_one"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="红包余额"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/btn_ti_xian"
                                android:text="提现"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="29dp"
                                android:gravity="center"
                                android:textColor="#FF9E9F"
                                android:layout_width="45dp"
                                android:layout_height="20dp"
                                android:background="@drawable/shape_welfate_tixian"
                                android:textSize="12sp"/>
                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/ll_two"
                            android:layout_below="@id/rl_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/tv_redpack_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="40sp"
                                android:textColor="@color/white"/>

                            <ImageView
                                android:id="@+id/iv_redbao_mx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:padding="8dp"

                                android:src="@mipmap/iv_welfare_mx" />
                        </LinearLayout>


                        <ImageView
                            android:layout_below="@id/ll_two"
                            android:id="@+id/btn_chai_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/img_chai"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_below="@id/btn_chai_red"
                            android:id="@+id/tv_unpack_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/white"
                            android:text="剩余可拆0次"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="9dp"
                            android:layout_marginLeft="45dp"
                            android:gravity="center_horizontal"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:id="@+id/tv_already_chai_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="0"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="已拆次数"
                                android:textColor="#FFFF9E9F"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="9dp"
                            android:layout_marginRight="45dp"
                            android:gravity="center_horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true">
                            <TextView
                                android:id="@+id/tv_alreay_chai_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="0元"
                                android:textColor="@color/white"/>

                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="已拆金额"
                                android:textColor="#FFFF9E9F"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <!--END-->
                </android.support.design.widget.CollapsingToolbarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="@dimen/udesk_10"
                        android:layout_marginBottom="6dp">

                        <ImageView
                            android:id="@+id/img_share_welfare"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@mipmap/img_welfare_yaoqing"/>

                        <ImageView
                            android:id="@+id/img_click"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_click_song"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@mipmap/bg_redbao_area"/>

                    <!--红包购物专区-->
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_vip_lb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </LinearLayout>
        </com.woyun.warehouse.view.JudgeNestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <!--ToolBar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:background="#FFFD4F5F"
            app:layout_collapseMode="pin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/comm_left"
                    android:visibility="gone" />

                <android.support.v7.widget.ButtonBarLayout
                    android:id="@+id/buttonBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/toolbar_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="福利"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </android.support.v7.widget.ButtonBarLayout>


                <TextView
                    android:id="@+id/text_memu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:visibility="gone" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </RelativeLayout>


</FrameLayout>
