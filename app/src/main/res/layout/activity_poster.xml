<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_weight="1"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_centerInParent="true"
                android:layout_width="45dp"
                android:layout_height="45dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            
            <TextView
                android:textColor="#FFF5336F"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:text="分享给朋友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"/>
            
            <LinearLayout
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <LinearLayout
                    android:id="@+id/ll_weixin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/share_weixin"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textSize="14sp"
                        android:layout_marginTop="11dp"
                        android:text="微信"
                        android:textColor="#FF7B879A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_weixin_circle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/share_circle"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textSize="14sp"
                        android:layout_marginTop="11dp"
                        android:text="朋友圈"
                        android:textColor="#FF7B879A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/share_save"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textSize="14sp"
                        android:layout_marginTop="11dp"
                        android:text="保存"
                        android:textColor="#FF7B879A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_marginBottom="14dp"/>
                </LinearLayout>
            </LinearLayout>
            
            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="取消"
                android:background="#FFF7FAFD"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FFAFAFAF"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>