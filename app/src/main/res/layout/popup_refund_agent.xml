<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/shape_white_liner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_right_cha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img_de"
        android:src="@mipmap/img_tuikuan_apply"
        android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        android:text="提现审核中！"
        android:layout_below="@+id/img_de"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textColor="@color/text_black"/>

    <LinearLayout
        android:id="@+id/ll_money"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money"
            android:textColor="#C6CBD2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C6CBD2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll_money"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_type"
            android:textColor="#C6CBD2"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C6CBD2"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_agent_buy"
        android:layout_marginBottom="40dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:textSize="14sp"
       android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/shape_main_btn"
        android:text="确定"/>


</RelativeLayout>
